---
import HeaderLink from "./HeaderLink.astro";
import { SOCIAL_LINKS } from "../consts";
import { Icon } from "astro-icon/components";
---

<header>
  <nav
    class="font-medium text-lg tracking-tight text-background-slate hover:text-primary transition-colors duration-300"
  >
    <h2>
      <a href="/">
        <img src="/logo.svg" alt="Chrome Key Bioinformatics" width="80" height="80" />
      </a>
    </h2>

    <!-- Mobile menu button -->
    <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <Icon name="mdi:menu" width={32} height={32} />
    </button>

    <!-- Navigation items -->
    <div class="nav-items">
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <div class="social-links">
        {
          SOCIAL_LINKS.map(({ url, label, icon }) => (
            <a href={url} target="_blank" rel="noopener noreferrer">
              <span class="sr-only">{label}</span>
              <Icon name={icon} width={32} height={32} />
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    width: 100%;
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }

  img {
    max-width: 100%;
    height: auto;
    margin: 1.5em 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    position: relative;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
    /* Ensure touch targets are at least 44px */
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .nav-items {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .internal-links {
    display: flex;
    gap: 0.5em;
  }

  .social-links,
  .social-links a {
    display: flex;
    gap: 0.5em;
  }

  /* Hide mobile menu button on desktop */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5em;
    color: var(--black);
  }

  /* Mobile styles */
  @media (max-width: 720px) {
    header {
      padding: 0 1em;
    }
    nav {
      padding: 0.5em 0;
    }

    .mobile-menu-toggle {
      display: block;
      order: 3;
    }

    h2 {
      order: 1;
    }

    .nav-items {
      display: none;
      order: 4;
      flex-direction: column;
      width: 100%;
      padding: 1em 0;
    }

    .nav-items.active {
      display: flex;
    }

    .internal-links {
      flex-direction: column;
      width: 100%;
    }

    .internal-links a {
      padding: 0.75em 0.5em;
      border-bottom: 1px solid rgba(var(--black), 0.1);
    }

    .social-links {
      padding-top: 1em;
      justify-content: center;
    }

    /* Reduce logo size on mobile */
    img {
      width: 60px;
      height: 60px;
      margin: 0.75em 0;
    }
  }

  /* Tablet/small screen adjustments */
  @media (max-width: 900px) and (min-width: 721px) {
    .internal-links {
      gap: 0.25em;
    }

    nav a {
      padding: 1em 0.35em;
      font-size: 0.95em;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality
  const menuToggle = document.querySelector(".mobile-menu-toggle");
  const navItems = document.querySelector(".nav-items");

  menuToggle?.addEventListener("click", () => {
    const isExpanded = menuToggle.getAttribute("aria-expanded") === "true";
    menuToggle.setAttribute("aria-expanded", String(!isExpanded));
    navItems?.classList.toggle("active");
  });
</script>
