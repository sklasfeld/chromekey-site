---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroImageDescription,
  heroImageCredit,
  originalPost,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 100%;
        max-width: 100%;
        margin: 0;
      }

      article {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 2em 1em;
      }

      .title {
        text-align: center;
        margin-bottom: 2em;
      }

      .title h1 {
        margin: 0 0 0.5em 0;
        line-height: 1.2;
      }

      .date {
        font-size: 0.9em;
        color: rgb(var(--gray));
        margin-bottom: 1em;
      }

      .date * {
        border-bottom: none !important;
      }

      .last-updated-on {
        font-style: italic;
        margin-top: 0.25em;
      }

      .original-post {
        margin-top: 0.75em;
        font-size: 0.9em;
        color: rgb(var(--gray));
      }

      .original-post p {
        margin: 0;
      }

      .original-post a {
        color: var(--accent-secondary);
        text-decoration: none;
      }

      .original-post a:hover {
        text-decoration: underline;
      }

      .hero-image {
        width: 100%;
        margin: 2em 0;
      }

      .hero-image img {
        display: block;
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }

      .image-credit {
        text-align: center;
        font-size: 0.8em;
        color: rgb(var(--gray));
        margin-top: 0.75em;
      }

      .image-credit a {
        color: rgb(var(--gray));
        text-decoration: none;
      }

      .image-credit a:hover {
        color: var(--accent-secondary);
      }

      .content-divider {
        border: none;
        border-top: 2px solid var(--background-cream);
        margin: 2em 0;
      }

      .prose {
        color: rgb(var(--gray-dark));
      }

      @media (max-width: 720px) {
        article {
          padding: 1.5em 1em;
        }

        .title h1 {
          font-size: var(--text-3xl);
        }

        .hero-image {
          margin: 1.5em 0;
        }

        .hero-image img {
          max-height: 300px;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="title">
          <h1>{title}</h1>
          <div class="date">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <div class="last-updated-on">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
            {
              originalPost && originalPost.org && originalPost.link && (
                <div class="original-post">
                  <p>
                    Originally published at <a href={originalPost.link}>{originalPost.org}</a>
                  </p>
                </div>
              )
            }
          </div>
        </div>

        {
          heroImage && (
            <div class="hero-image">
              <Image width={1020} height={510} src={heroImage} alt={heroImageDescription || ""} />
              {heroImageCredit && (
                <div class="image-credit">
                  <a href={heroImageCredit.link}>{heroImageCredit.text}</a>
                </div>
              )}
            </div>
          )
        }

        <hr class="content-divider" />

        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
